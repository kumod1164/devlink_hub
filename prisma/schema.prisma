generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  email     String   @unique
  image     String?
  githubUrl String?
  linkedinUrl String?
  skills    String[]
  followedUsers String[]
  createdAt DateTime @default(now())
}
